<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundPanel"
    android:foreground="@drawable/rect_selector"
    android:orientation="horizontal"
    android:padding="@dimen/y16">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/y88"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        tools:background="@mipmap/ic_type_folder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.neuroandroid.pyfilebrowser.widget.NoPaddingTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/colorGray333"
            android:textSize="14sp"
            tools:text="title"/>

        <com.neuroandroid.pyfilebrowser.widget.NoPaddingTextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y8"
            android:textColor="@color/colorGray666"
            android:textSize="12sp"
            tools:text="subTitle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/x64"
            android:layout_height="@dimen/y64"
            android:layout_gravity="right"
            android:background="@drawable/round_selector"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="center"
            android:tint="@color/colorGray333"
            android:tintMode="src_in"
            app:srcCompat="@drawable/ic_more_vert_white"/>

        <com.neuroandroid.pyfilebrowser.widget.NoPaddingTextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:lines="1"
            android:textColor="@color/colorGray666"
            android:textSize="12sp"
            tools:text="16.88M"/>
    </LinearLayout>
</LinearLayout>