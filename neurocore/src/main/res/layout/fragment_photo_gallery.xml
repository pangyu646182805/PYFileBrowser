<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.neuroandroid.pyfilebrowser.widget.recyclerviewpager.RecyclerViewPager
        android:id="@+id/rv_photo_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ll_thumbnails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_thumbnails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y180"
            android:clipToPadding="false"/>
    </LinearLayout>

    <com.neuroandroid.pyfilebrowser.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar_shadow"/>
</RelativeLayout>